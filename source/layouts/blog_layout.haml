        var tex_extensions = ["AMSmath.js","AMSsymbols.js","noErrors.js","noUndefined.js"];
        if(window.mathUseXypic) {
          tex_extensions.push("[xyjax_ext]/xypic.js");
        }
        MathJax.Hub.Config({
          extensions: ["tex2jax.js","MathMenu.js","MathZoom.js"],
